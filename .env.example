# Jira
JIRA_BASE_URL=https://barco-nv.atlassian.net
JIRA_API_KEY=replace_me
JIRA_EMAIL=replace_me
JIRA_PROJECT_KEY=replace_me

# Django
DEBUG=1
USE_SQLITE=1
DJANGO_SECRET_KEY=replace-with-long-random-value
ENABLE_ROLE_AUTH=0
ENABLE_HTTPS=0
ALLOWED_HOSTS=localhost,127.0.0.1,backend
CORS_ALLOWED_ORIGINS=http://localhost:5173
CSRF_TRUSTED_ORIGINS=http://localhost:5173
TIME_ZONE=UTC

# Optional LDAP auth
ENABLE_LDAP_AUTH=0
LDAP_SERVER_URI=
LDAP_BIND_DN=
LDAP_BIND_PASSWORD=
LDAP_USER_BASE_DN=
LDAP_GROUP_BASE_DN=
LDAP_USER_FILTER=(uid=%(user)s)
LDAP_REQUIRE_GROUP=
LDAP_ADMIN_GROUP_DN=
LDAP_SCRUM_MASTER_GROUP_DN=
LDAP_VIEWER_GROUP_DN=

# Postgres (used when USE_SQLITE=0)
POSTGRES_DB=dod_compliance
POSTGRES_USER=dod_user
POSTGRES_PASSWORD=dod_password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Frontend
VITE_PROXY_TARGET=http://localhost:8000

# Celery sync scheduler
CELERY_BROKER_URL=redis://redis:6379/0
ENABLE_PERIODIC_SYNC=1
SYNC_INTERVAL_MINUTES=15
JIRA_SYNC_MAX_RESULTS=200
SYNC_STALE_THRESHOLD_MINUTES=30
SYNC_SCHEDULE_ACTOR=celery_beat

# Nudge/email
NUDGE_COOLDOWN_HOURS=24
DEFAULT_FROM_EMAIL=dod-dashboard@localhost
NUDGE_DEFAULT_RECIPIENTS=
NUDGE_TEAM_RECIPIENTS_JSON=
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=

# Optional HTTPS reverse proxy profile (docker compose --profile secure)
HTTPS_HTTP_PORT=8080
HTTPS_HTTPS_PORT=8443
TLS_REDIRECT_PORT=8443
TLS_CERT_CN=localhost
TLS_CERT_DAYS=3650
BACKEND_UPSTREAM=http://backend:8000
FRONTEND_UPSTREAM=http://frontend:5173
